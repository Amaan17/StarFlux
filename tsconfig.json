{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "electron/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts",
    "index.html"
  ]
}

